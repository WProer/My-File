.DiscussAdd-Content {
  width: 99%;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  padding: 10px 5px;
  border: 5px solid #9999FF;
  margin-left: 2px;
}
.DiscussAdd-Content .DiscussAdd-content_Menu {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: 1px solid #fff;
}
.DiscussAdd-Content .DiscussAdd-content_Menu text {
  width: 80px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9999FF;
  color: #fff;
  border: 1px solid #9999FF;
  border-radius: 5px 5px 0px 0px;
  font-weight: 700;
}
.DiscussAdd-Content .DiscussAdd-content_Menu .DiscussAdd-Menu_Content {
  height: 70px;
  display: flex;
  justify-content: start;
  align-items: center;
  background-color: #9999FF;
  border: 1px solid #9999FF;
}
.DiscussAdd-Content .DiscussAdd-content_Menu .DiscussAdd-Menu_Content button {
  height: 40%;
  margin: 0px;
  margin-left: 3px;
  display: flex;
  align-items: center;
}
.DiscussAdd-Content .DiscussAdd-content_Area {
  height: 90%;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #e5e5ff;
  border-top: 1px solid skyblue;
  padding: 10px 10px;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_Title {
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_Title text {
  font-size: 18px;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_Title input {
  width: 80%;
  height: 25%;
  border: 1px solid black;
  background-color: #fff;
  box-shadow: 0px 1px 1px 1px #ccc inset;
  margin-left: 20px;
  padding: 1px 5px;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 3px;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_TEXT {
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 10px;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_TEXT text {
  font-size: 18px;
}
.DiscussAdd-Content .DiscussAdd-content_Area .DiscussAdd-Area_TEXT textarea {
  width: 99%;
  height: 500px;
  border: 1px solid black;
  overflow: hidden;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 5px;
  font-size: 15px;
}

