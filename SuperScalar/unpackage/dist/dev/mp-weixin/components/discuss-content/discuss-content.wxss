.discuss-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.discuss-content .scroll-view {
  width: 100%;
  height: 165px;
  display: flex;
  flex-direction: column;
  border: 2px solid #b9c8ff;
  box-shadow: 1px 1px 3px 2px #b9c8ff;
  margin: 10px;
  border-radius: 5px;
  overflow: hidden;
  box-sizing: border-box;
  background-color: #9999FF;
}
.discuss-content .scroll-view .discuss-content-title {
  width: 100%;
  height: 70%;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
}
.discuss-content .scroll-view .discuss-content-title image {
  width: 25%;
  height: 90%;
  overflow: hidden;
  box-sizing: border-box;
  margin: 10px;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title {
  width: 70%;
  height: 90%;
  margin: 10px 0px;
  padding: 0px 10px;
  font-size: 17px;
  font-weight: 700;
  overflow: hidden;
  box-sizing: border-box;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title text {
  color: #fff;
  font-size: 20px;
  margin-right: 15px;
  overflow: hidden;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title text:nth-child(1) {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title .heatOne {
  background-color: orangered;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title .heatTwo {
  background-color: orange;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title .heatThree {
  background-color: greenyellow;
}
.discuss-content .scroll-view .discuss-content-title .discuss-title .heatFour {
  background-color: #06ff38;
}
.discuss-content .scroll-view .discuss-content-item {
  width: 100%;
  height: 30%;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-name {
  width: 100%;
  height: 50%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0px 15px;
  display: flex;
  justify-content: space-between;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-name text {
  color: #fff;
  font-weight: 700;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-name text:nth-child(1) {
  color: #ff684e;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-start {
  width: 100%;
  height: 50%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0px 55px;
  display: flex;
  justify-content: space-around;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-start .uni-icons {
  color: #fff !important;
  font-weight: 700 !important;
}
.discuss-content .scroll-view .discuss-content-item .discuss-item-start text {
  color: #fff;
  font-weight: 700;
}

