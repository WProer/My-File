.search-content {
  width: 100%;
  height: 110%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5px 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2px solid #3399CC;
  box-shadow: 0px 2px 2px #FFFFFF;
}
.search-content .search-left {
  width: 50%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: start;
}
.search-content .search-left .search-left_logo {
  height: 100%;
  width: 50%;
  overflow: hidden;
  box-sizing: border-box;
}
.search-content .search-left .search-left_logo image {
  width: 100%;
  height: 100%;
}
.search-content .search-left text {
  margin-left: 5px;
  color: #FFFFFF;
  font-weight: 700;
  font-size: 30px;
  text-shadow: 3px -2px 3px #9e9b9b;
}
.search-content .search-right {
  width: 50%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  justify-content: end;
  align-items: center;
}
.search-content .search-right .search {
  background-color: #fff;
  width: 100%;
  height: 30px;
  border-radius: 30px;
  padding: 0px 10px;
  display: flex;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
}

